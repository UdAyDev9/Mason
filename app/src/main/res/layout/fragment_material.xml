<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_service_types"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            />

        <Spinner
            android:id="@+id/spinner_brands"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            />

        <Spinner
            android:id="@+id/spinner_sizes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />

        <Spinner
            android:id="@+id/spinner_shape"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            />

        <Spinner
            android:id="@+id/spinner_business_types"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            />
<!--
            style="@style/spinner_style"
-->






        <EditText
            android:id="@+id/et_city"
            android:clickable="true"
            android:cursorVisible="true"
            android:layout_marginTop="10dp"
            android:hint="Enter City"
            android:maxLines="1"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_search_city"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:listitem="@layout/item_places"/>

        <AutoCompleteTextView
            android:id="@+id/product_name"
            android:clickable="true"
            android:cursorVisible="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:hint="Near By Location(Optional)"
            android:maxLines="1"
            android:visibility="gone"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



        <AutoCompleteTextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            />
        <AutoCompleteTextView
            android:id="@+id/district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:cursorVisible="false"
            android:visibility="gone"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:textColor="@color/colorPrimaryDark"
            />

        <ImageView
            android:id="@+id/img_item_type"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            tools:src="@drawable/aggregate_stones"
            android:scaleType="centerCrop"
            android:visibility="gone"

            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:shadowColor="@android:color/transparent"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"/>



    </LinearLayout>

</FrameLayout>
