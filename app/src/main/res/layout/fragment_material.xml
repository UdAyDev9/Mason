

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="Select Material Category"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_shape_outline"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_service_types"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashboard_material_search_spinner_size"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/add_material_label_margin_top"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="Select Sub-Category"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_shape_outline"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_business_types"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashboard_material_search_spinner_size"
                android:layout_marginTop="10dp"
                android:visibility="visible"

                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/add_material_label_margin_top"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="Select Brand"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_shape_outline"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_brands"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashboard_material_search_spinner_size"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_sizes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/add_material_label_margin_top"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="Select Shape"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_shape_outline"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_shape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashboard_material_search_spinner_size"
                android:layout_marginTop="10dp"
                android:visibility="visible" />
        </LinearLayout>
        <!--
                    style="@style/spinner_style"
        -->


        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:hint="Enter City"
            android:maxLines="1"
            android:padding="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_search_city"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            tools:itemCount="1"
            tools:listitem="@layout/item_places" />

        <AutoCompleteTextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusableInTouchMode="true"
            android:hint="Near By Location(Optional)"
            android:maxLines="1"
            android:padding="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone" />


        <AutoCompleteTextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:hint="State"
            android:padding="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />

        <AutoCompleteTextView
            android:id="@+id/district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:hint="District"
            android:padding="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_item_type"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@drawable/aggregate_stones"

            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundedbutton"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:shadowColor="@android:color/transparent"
            android:text="Search" />


    </LinearLayout>

</FrameLayout>
