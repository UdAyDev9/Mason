<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please give a missed call for enquiry and customer support. You will recieve a call back shortly."
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_margin="18dp"
            android:gravity="center"
            android:background="#d7d4d4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dial - 8333801642"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/txt_dial"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_margin="18dp"
            android:gravity="center"
            android:background="#d7d4d4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dial - 04040191909"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/txt_dial1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>