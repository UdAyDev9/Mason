<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:background="#fff"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:visibility="gone"
                android:textColor="@color/home_line_color">


                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_person_outline_black_24dp"
                    android:hint="Enter Name"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText

                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_email_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email Id"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:drawableTint="@color/colorPrimary"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:id="@+id/et_email"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <EditText
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:id="@+id/et_password"
                    android:drawableTint="@color/colorPrimary" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <EditText
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:id="@+id/et_name"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText
                    android:id="@+id/et_bname"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_business_center_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Enter Business Name"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText
                    android:id="@+id/et_mbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_phonelink_ring_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Enter Mobile No"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">


                <EditText
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_account_balance_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter State"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:id="@+id/et_state"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="@drawable/spinner_shape_outline"
                >

                <Spinner
                    android:id="@+id/state_spinner"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overlapAnchor="false"
                    android:backgroundTint="@color/colorPrimary"
                    android:spinnerMode="dropdown"
                    />

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">


                <EditText
                    android:id="@+id/et_distract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_format_list_numbered_black_24dp"
                    android:hint="Enter District"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                />
            <LinearLayout
                android:id="@+id/district_spinner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_shape_outline"
                >

                <Spinner
                    android:id="@+id/district_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overlapAnchor="false"
                    android:backgroundTint="@color/colorPrimary"
                    android:spinnerMode="dropdown"
                    />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <EditText
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_person_pin_circle_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:hint="Enter City"
                    android:inputType="text"
                    android:focusableInTouchMode="true"
                    android:id="@+id/et_city"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_search_city"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                tools:itemCount="2"
                tools:listitem="@layout/item_places"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <EditText android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_person_pin_circle_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:hint="Enter PinCode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:id="@+id/et_pincode"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <EditText android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_format_list_numbered_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:hint="Enter Address"
                    android:inputType="text"
                    android:id="@+id/et_address"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_search_city"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                tools:itemCount="0"
                tools:listitem="@layout/item_places"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_line_color"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText
                    android:id="@+id/et_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:drawableEnd="@drawable/ic_format_list_numbered_black_24dp"
                    android:hint="Enter City"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/home_txt_color"
                    android:drawableTint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_iam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                />

            <LinearLayout
                android:id="@+id/ll_user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:background="@drawable/spinner_shape_outline"
                >


                <Spinner
                    android:id="@+id/sp_servicertype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overlapAnchor="false"
                    android:backgroundTint="@color/colorPrimary"
                    android:spinnerMode="dropdown"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/bt_reg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/roundedbutton"
                    android:onClick="register"
                    android:text="REGISTER"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>